<!DOCTYPE html>
<html>
  <head>
    <title><%= settings.title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Express stock photo application</p>
    <ul id="photos">
    <% photos.forEach(function(photo) { %>
      <li>
      	<h2><%= photo.name %></h2>
      	<a href="/photo/<%= photo.id %>/download">
          <img src="images/<%= photo.path %>"/>
        </a>
      </li>
    <% }) %>
    </ul>
  </body>
</html>